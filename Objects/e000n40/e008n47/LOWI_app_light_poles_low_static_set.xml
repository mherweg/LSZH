<?xml version="1.0"?>
<PropertyList>
	
	<!-- LOWI R26 custom approach lights set - row of 5 static lights -->
	<!-- by ot-666 - v_0.5 - 2010.12.08                               -->
	
	<path>LOWI_app_light_poles_low_static_set.ac</path>
	
	<!-- LOD for light housings -->
	<animation>
		<type>range</type>  
		<object-name>app_light_set_05</object-name>
		<object-name>app_light_set_box</object-name>
		<min-m>0</min-m>
		<max-m>7000</max-m>
	</animation>
	
	<!-- light model effects visible at night -->
	<model>
	<path>Models/Airport/AP_Lights/Light_effects/approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m>-2.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>Models/Airport/AP_Lights/Light_effects/approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m>-1.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>Models/Airport/AP_Lights/Light_effects/approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m> 0.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>Models/Airport/AP_Lights/Light_effects/approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m> 1.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>
	
	<model>
	<path>Models/Airport/AP_Lights/Light_effects/approach_light.ac</path>
	<offsets>
		<x-m> 0.100 </x-m>
		<y-m> 2.000 </y-m>
		<z-m> 1.500 </z-m>
		<pitch-deg> 0.00</pitch-deg>
		<heading-deg>0.0 </heading-deg>
	</offsets>
	</model>

    <animation>
        <type>noshadow</type>
        <object-name>WhiteLight6000</object-name>
    </animation>

    <animation>
        <type>alpha-test</type>
        <alpha-factor>0.01</alpha-factor>
    </animation>
	<!--
	<animation>
		<type>select</type>
		<object-name>strobe10000</object-name>
			<condition>
				<equals>
				<property>/scenery/LOWI/LOWI_r26_app_flash/light-number</property>
				<value>1.0</value>
				</equals>
			</condition>
    </animation>
	-->
	
	<animation>
		<type>select</type>
		<object-name>WhiteLight6000</object-name>
			<condition>
				<or>
					<greater-than>
						<property>/sim/time/sun-angle-rad</property>
						<value>1.57</value>
					</greater-than>
					<less-than>
						<property>environment/visibility-m</property>
						<value>4500.00</value>
					</less-than>
				</or>
			</condition>
	</animation>
		
	<animation>
	  <type>range</type>
	  <min-m>0</min-m>
	  <max-m>15000</max-m>
    </animation>
	
  <animation>
    <type>dist-scale</type>
    <object-name>WhiteLight6000</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0.025</dep>
      </entry>
      <entry>
        <ind>300</ind>
        <dep>0.1</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>0.2</dep>
      </entry>
      <entry>
        <ind>6000</ind>
        <dep>0.7</dep>
      </entry>
	  <entry>
        <ind>20000</ind>
        <dep>1.3</dep>
      </entry>
    </interpolation>
  </animation>


</PropertyList>
